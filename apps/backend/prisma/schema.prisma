generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String?
  passwordHash String
  role         Role      @default(USER)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  products     Product[]
  sessions     Session[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model Category {
  id          String     @id @default(cuid())
  name        String     @unique
  description String?
  slug        String     @unique
  imageUrl    String?
  parentId    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  parent      Category?  @relation("CategoryToCategory", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryToCategory")
  products    Product[]

  @@map("categories")
}

model Product {
  id             String      @id @default(cuid())
  name           String
  description    String?
  sku            String?     @unique
  price          Int
  compareAtPrice Int?
  inventory      Int         @default(0)
  weight         Float?
  isAvailable    Boolean     @default(true)
  featured       Boolean     @default(false)
  categoryId     String?
  userId         String?
  productType    ProductType
  strainType     StrainType?
  cbdContent     Float?
  thcContent     Float?
  size           String?
  tags           String[]
  images         String[]
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  category       Category?   @relation(fields: [categoryId], references: [id])
  user           User?       @relation(fields: [userId], references: [id])

  @@map("products")
}

enum Role {
  USER
  ADMIN
}

enum ProductType {
  FLOWER
  CONCENTRATE
  EDIBLE
  TOPICAL
  TINCTURE
  CAPSULE
  ACCESSORY
  MERCHANDISE
}

enum StrainType {
  SATIVA
  INDICA
  HYBRID
}
